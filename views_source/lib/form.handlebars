<div class="form-wrap {{className}}">
    <form class="form" action="{{formAction}}" method="POST">
        <div class="bd">
            <ul class="form-ul">
                {{#form}}
                <li class="form-li">
                {{#if textarea}}
                    <label for={{textarea}}>{{label}}</label>
                    <textarea name="{{textarea}}" class="{{textarea}}" placeholder={{label}}/>
                    <div class="err-msg err-{{textarea}} D-n"></div>
                    {{#if description}}
                        <p>{{description}}</p>
                    {{/if}}
                {{/if}}
                {{#if text}}
                    <label class="" for={{text}}>{{label}}</label>
                    <input type="text" name="{{text}}" class="{{text}}" placeholder={{label}} />
                    <div class="err-msg err-{{text}} D-n"></div>
                    {{#if description}}
                        <p>{{description}}</p>
                    {{/if}}
                {{/if}}
                {{#if password}}
                    <div>
                        <label class="" for={{password}}>{{label}}</label>
                        <input type="password" name="{{password}}" class="{{password}}" placeholder={{label}} />
                    </div>
                    <div class="D-n">
                        <label class="" for={{password}}-confirm>再次輸入{{label}}</label>
                        <input type="password" class="{{password}}-confirm" placeholder={{label}} />
                    </div>
                    <div class="err-msg err-{{password}} D-n"></div>
                    {{#if description}}
                        <p>{{description}}</p>
                    {{/if}}
                {{/if}}
                {{#if number}}
                    <label class="" for={{number}}>{{label}}</label>
                    <input type="number" name="{{number}}" class="{{number}}" placeholder={{label}} />
                    <div class="err-msg err-{{number}} D-n"></div>
                    {{#if description}}
                        <p>{{description}}</p>
                    {{/if}}
                {{/if}}
                {{#if select}}
                    <label for={{select}}>{{label}}</label>
                    <select name="{{select}}" class="{{select}}" />
                    {{#selectOptions}}
                        <option value={{value}} data-description={{description}}>{{key}}</option>
                    {{/selectOptions}}
                    </select>
                    <div class="err-msg err-{{select}} D-n"></div>
                {{/if}}
                {{#if radio}}
                    {{#radioOptions}}
                        <label for={{key}}>{{key}}</label>
                        <input type="radio" name="{{key}}" class="{{key}}" value={{value}}/>
                        <div class="err-msg err-{{key}} D-n"></div>
                        <p>{{description}}</p>
                    {{/radioOptions}}
                {{/if}}
                {{#if button}}
                    {{#buttonOptions}}
                        <label for={{label}}>{{label}}</label>
                        <button name="{{label}}" class="{{label}}" />{{label}}</button>
                        <div class="err-msg err-{{label}} D-n"></div>
                        <p>{{description}}</p>
                    {{/buttonOptions}}
                {{/if}}
                </li>
               {{/form}}
            </ul>
        </div>
        <div class="ft">
            <input class="Pos-r btn Btn-orang Z-2 P-5 Fz-4" type="submit" value="{{formSubmit}}" />
        </div>
    </form>
</div>